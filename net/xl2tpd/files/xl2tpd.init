# Copyright (C) 2006-2015 OpenWrt.org

START=60
USE_PROCD=1

BIN=xl2tpd
RUN_D="/var/run/xl2tpd"
PID_F="/var/run/xl2tpd.pid"

start_service() {
	rm -rf "$RUN_D"
	mkdir -p "$RUN_D"

	procd_open_instance
	procd_add_mdns "l2tp" "udp" "1701" "daemon=xl2tpd"
	procd_set_param command $BIN -D -l -p "$PID_F"
	procd_set_param respawn
	procd_close_instance
}

stop_service() {
	rm -rf "$RUN_D"
	rm -rf "$PID_F"
}
