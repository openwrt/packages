config pool
	option hostname '2.openwrt.pool.ntp.org'
	option maxpoll '12'
	option maxsources '4'
	option iburst '1'
	option prefer '0'
	# option xleave '0'

config dhcp_ntp_server 'dhcp_ntp_server'
	option iburst '1'
	option disabled '0'

config allow 'allow'
	list interface 'lan' # get subnet from lan interface
	# list subnet '192.168.1.1/24' # or list IPv4 subnets explicitly
	# list subnet '2001:db8::/32'  # or list IPv6 subnets explicitly

config makestep 'makestep'
	option threshold '1.0'
	option limit '3'

config nts 'nts'
	option rtccheck '1'
	option systemcerts '1'

