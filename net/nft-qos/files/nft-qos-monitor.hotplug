export initscript="nft-qos-monitor"

. /lib/nft-qos/monitor.sh


case "$ACTION" in
	add | update)
		qosdef_init_env
		qosdef_init_monitor
		qosdef_monitor_add $MACADDR $IPADDR $HOSTNAME
	;;
	remove)
		qosdef_init_env
		qosdef_init_monitor
		qosdef_monitor_del $MACADDR $IPADDR $HOSTNAME
	;;
esac
